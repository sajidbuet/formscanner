<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>com.albertoborsetta</groupId>
    <artifactId>formscanner</artifactId>
    <version>1.1.4</version>
  </parent>

  <artifactId>formscanner-gui</artifactId>
  <packaging>jar</packaging>

  <name>FormScanner - GUI</name>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <quaqua.version>8.0</quaqua.version>
    <!-- চাইলে here set করা যায় -->
    <main.class>com.albertoborsetta.formscanner.main.FormScanner</main.class>
    <!-- shaded jar classifier -->
    <shade.classifier>shaded</shade.classifier>
    <maven.shade.version>3.5.0</maven.shade.version>
  </properties>

  <!-- আপনার লোকাল libs ফোল্ডারেও repo রাখা আছে—যদি Quaqua/অন্যান্য জার লোকালি রাখেন -->
  <repositories>
    <repository>
      <id>in-project</id>
      <name>In Project Repo</name>
      <url>file://${project.basedir}/libs</url>
    </repository>
  </repositories>

  <dependencies>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>formscanner-api</artifactId>
      <version>${project.version}</version>
    </dependency>

    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>formscanner-commons</artifactId>
      <version>${project.version}</version>
    </dependency>

    <!-- NOTE: Quaqua ডিপেনডেন্সি আর এখানে নেই; নিচের macOS-only profile-এ আছে -->
  </dependencies>

  <!-- macOS-only profile: শুধুমাত্র Mac-এ build হলে Quaqua যুক্ত হবে -->
  <profiles>
    <profile>
      <id>macosx-laf</id>
      <activation>
        <os>
          <family>mac</family>
        </os>
      </activation>
      <dependencies>
        <!-- আপনার বর্তমান গ্রুপআইডি অনুযায়ী রাখা হলো -->
        <dependency>
          <groupId>randelshofer</groupId>
          <artifactId>quaqua</artifactId>
          <version>${quaqua.version}</version>
          <scope>compile</scope>
        </dependency>
        <!--
        যদি আপনার প্রকৃত জার ch.randelshofer:quaqua হয়, উপরেরটি বদলে দিন:
        <dependency>
          <groupId>ch.randelshofer</groupId>
          <artifactId>quaqua</artifactId>
          <version>${quaqua.version}</version>
          <scope>compile</scope>
        </dependency>
        -->
      </dependencies>
    </profile>
  </profiles>

  <build>
    <plugins>
      <!-- (ঐচ্ছিক) parent-এ না থাকলে compiler প্লাগইন যোগে Java version enforce করতে পারেন
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.11.0</version>
        <configuration>
          <source>17</source>
          <target>17</target>
        </configuration>
      </plugin>
      -->

      <!-- ✅ Fat runnable JAR বানাতে Shade -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-shade-plugin</artifactId>
        <version>${maven.shade.version}</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <!-- shaded jar আলাদা classifier -->
              <shadedArtifactAttached>true</shadedArtifactAttached>
              <shadedArtifactClassifier>${shade.classifier}</shadedArtifactClassifier>

              <!-- Main-Class সেট -->
              <transformers>
                <transformer implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
                  <mainClass>${main.class}</mainClass>
                </transformer>
                <!-- service loader ফাইল মার্জ -->
                <transformer implementation="org.apache.maven.plugins.shade.resource.ServicesResourceTransformer" />
                <!-- (ঐচ্ছিক) লাইসেন্স/নোটিস মার্জ -->
                <transformer implementation="org.apache.maven.plugins.shade.resource.ApacheLicenseResourceTransformer" />
              </transformers>

              <!-- (ঐচ্ছিক) সিগনেচার/মেটা-ইনফ ক্লিনআপ -->
              <filters>
                <filter>
                  <artifact>*:*</artifact>
                  <excludes>
                    <exclude>META-INF/*.SF</exclude>
                    <exclude>META-INF/*.DSA</exclude>
                    <exclude>META-INF/*.RSA</exclude>
                  </excludes>
                </filter>
              </filters>

              <!-- (ঐচ্ছিক) প্যাকেজ রিলোকেশন লাগলে এখানে কনফিগ করবেন
              <relocations>
                <relocation>
                  <pattern>org.apache.commons</pattern>
                  <shadedPattern>shadow.org.apache.commons</shadedPattern>
                </relocation>
              </relocations>
              -->
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

</project>
