              <shadedArtifactAttached>true</shadedArtifactAttached>
              <shadedArtifactClassifier>${shade.classifier}</shadedArtifactClassifier>
              <!-- Main-Class à¦¸à§‡à¦Ÿ -->
              <transformers>
                <transformer implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
                  <mainClass>${main.class}</mainClass>
                </transformer>
                <!-- service loader à¦«à¦¾à¦‡à¦² à¦®à¦¾à¦°à§à¦œ -->
                <transformer implementation="org.apache.maven.plugins.shade.resource.ServicesResourceTransformer" />
                <!-- (à¦à¦šà§à¦›à¦¿à¦•) à¦²à¦¾à¦‡à¦¸à§‡à¦¨à§à¦¸/à¦¨à§‹à¦Ÿà¦¿à¦¸ à¦®à¦¾à¦°à§à¦œ -->
                <transformer implementation="org.apache.maven.plugins.shade.resource.ApacheLicenseResourceTransformer" />
              </transformers>
              <!-- (à¦à¦šà§à¦›à¦¿à¦•) à¦¸à¦¿à¦—à¦¨à§‡à¦šà¦¾à¦°/à¦®à§‡à¦Ÿà¦¾-à¦‡à¦¨à¦« à¦•à§à¦²à¦¿à¦¨à¦†à¦ª -->
              <filters>
                <filter>
                  <artifact>*:*</artifact>
                  <excludes>
                    <exclude>META-INF/*.SF</exclude>
                    <exclude>META-INF/*.DSA</exclude>
                    <exclude>META-INF/*.RSA</exclude>
                  </excludes>
                </filter>
              </filters>
              <!-- (à¦à¦šà§à¦›à¦¿à¦•) à¦ªà§à¦¯à¦¾à¦•à§‡à¦œ à¦°à¦¿à¦²à§‹à¦•à§‡à¦¶à¦¨ à¦²à¦¾à¦—à¦²à§‡ à¦à¦–à¦¾à¦¨à§‡ à¦•à¦¨à¦«à¦¿à¦— à¦•à¦°à¦¬à§‡à¦¨
              <relocations>
                <relocation>
                  <pattern>org.apache.commons</pattern>
                  <shadedPattern>shadow.org.apache.commons</shadedPattern>
                </relocation>
              </relocations>
              -->
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>